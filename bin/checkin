#!/usr/bin/env node

var commander = require('commander');
var package = require('../package.json');
var fs = require('fs');
var init = false;

commander
  .version(package.version)
  .option('-C, --config <path>', 'set config path [./config.js]')
  .option('-P, --port <port>', 'set port to listen on')
  .option('-D, --debug', 'enable verbose logging')
  ;

commander
  .command('init')
  .description('create config file')
  .action(function() {
    init = true;
  });

commander.parse(process.argv);

if (init) {
  var config = { expire: (60 * 60) * 72, auth: {}};
  commander.prompt('alertUrl: ', alertUrl);
  function alertUrl(alertUrl) {
    config.alertUrl = alertUrl;
    commander.prompt('resolvedUrl: ', resolvedUrl);
  };
  function resolvedUrl(resolvedUrl) {
    config.resolvedUrl = resolvedUrl;
    done();
  };
  function done() {
    fs.writeFileSync('./config.json', JSON.stringify(config));
  };
} else {
  var config;
  if (commander.config) {
    config = JSON.parse(fs.readFileSync(commander.config));
  } else {
    config = require(__dirname + '/../config');
  }
  if (commander.port) {
    config.port = commander.port;
  } else {
    config.port = 3000;
  }
  if (commander.debug) {
    config.debug = true;
  }
  require('../server')(config);
}